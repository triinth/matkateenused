        <ToolbarItem Text="Menu" Priority="0" Order="Primary" Clicked="OnMenuClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="WhiteSmoke" Offset="0.0" />
            <GradientStop Color="#000" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Grid BackgroundColor="GhostWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="img_mountains.png" Aspect="AspectFill" />
        <StackLayout Grid.Row="1" Padding="20">
            <Label Text="Matkateenused" FontSize="Large" FontAttributes="Bold" TextColor="IndianRed" Margin="50, 20, 0, 20" />
            <Label Text=""Looduspuhkus - parim valik!" Margin="0, 0, 0, 20" />
            <Button Text="Avastama!" Clicked="ExploreNow_Clicked" />
        </StackLayout>

    </Grid>




</ContentPage>
